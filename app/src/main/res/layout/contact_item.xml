<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/itemTextViewFullName"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:text="@string/full_name"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemTextViewId"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="@string/id"
                android:maxLength="12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/itemTextViewFullName" />

            <TextView
                android:id="@+id/itemTextViewPhoneNumber"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:text="@string/phone_number"
                app:layout_constraintStart_toEndOf="@+id/itemTextViewId"
                app:layout_constraintTop_toBottomOf="@+id/itemTextViewFullName" />

            <Button
                android:id="@+id/itemButtonUpdate"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="@string/update"
                app:layout_constraintEnd_toStartOf="@+id/itemButtonDelete"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/itemButtonDelete"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>